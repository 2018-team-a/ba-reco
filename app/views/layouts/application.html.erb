<!DOCTYPE html>
<html>
  <head>
    <title>BaRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajaxzip3.github.io/ajaxzip3.js" charset="UTF-8"></script>
  </head>
  <body>
    <div class="header-box">
    <header class="container-field text-center" style="background-color: black;">
        <div class="row">
            <h4 class="col-lg-3" style="font-family: selif;">
              <%= link_to "婆ーレコード", products_path %>
            </h4>
            <h4 class="col-lg-4">
              <div class="search-box text-left">
              <%= form_tag products_path, :method => 'get' do %>
              <div style="color: white;">
              タイトル検索
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "検索", :title => nil, style:"color: black;" %>
              </div>
              <% end %>
              </div>
            </h4>
            <div class="col-lg-2" style="padding-top: 15px; color: white;"">
              ようこそ、
              <% if user_signed_in? %>
              <%= current_user.name_family_name %>
              <% else %>
              ゲスト
              <% end %>
              さん
            </div>
            <nav class="col-lg-3">
              <ul class="list-inline" style="padding-top: 5px;">
                <% if user_signed_in? %>
                  <li>
                      <%= link_to "マイページ", edit_user_path(current_user.id), class:"btn btn-success" %>
                  </li>
                  <li>
                      <%= link_to "カート", carts_path, class:"btn btn-success" %>
                  </li>
                  <li>
                      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-success" %>
                  </li>
                <% else %>
                  <li>
                      <%= link_to "新規登録", new_user_registration_path, class:"btn btn-warning"%>
                  </li>
                  <li>
                      <%= link_to "ログイン", user_session_path, class:"btn btn-warning" %>
                  </li>
                <% end %>
              </ul>
            </nav>
        </div>
    </header>
    </div>
    <div class="container-field" style="height: auto;">
    <%= yield %>
  </div>
  <footer class="container-field" style="height: 200px;">
    <h2 class="footer-text">ba-record</h2>
  </footer>

  </body>
</html>
