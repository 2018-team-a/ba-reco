<!DOCTYPE html>
<html>
  <head>
    <title>BaRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajaxzip3.github.io/ajaxzip3.js" charset="UTF-8"></script>
  </head>
  <body style="background-color: #d6ffff">
    <div class="header-box">
    <header class="container-field text-center" style="background-color: #ffffff">
        <div class="row">
            <h1 class="col-lg-4">
              <%= link_to "婆ーレコード", products_path, class:"header-title"%>
            </h1>
            <h3 class="col-lg-5" style="padding-top: 10px;">
              <div class="search-box text-left">
              <%= form_tag products_path, :method => 'get' do %>
              タイトル検索
              <%= text_field_tag :search, params[:search], :size => "20"%>
              <%= submit_tag "検索", :title => nil %>
              <% end %>
              </div>
            </h3>
            <nav class="col-lg-3" style="padding-top: 20px;">
              ようこそ、
              <% if user_signed_in? %>
              <%= current_user.name_family_name %>
              <% else %>
              ゲスト
              <% end %>
              さん
              <ul class="list-inline">
                <% if user_signed_in? %>
                  <li>
                      <%= link_to "マイページ", edit_user_path(current_user.id), class:"btn btn-success" %>
                  </li>
                  <li>
                      <%= link_to "カート", carts_path, class:"btn btn-success" %>
                  </li>
                  <li>
                      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-success" %>
                  </li>
                  <li><%= link_to "退会", user_path(current_user.id) %>
                <% else %>
                  <li>
                      <%= link_to "新規登録", new_user_registration_path, class:"btn btn-warning"%>
                  </li>
                  <li>
                      <%= link_to "ログイン", user_session_path, class:"btn btn-warning" %>
                  </li>
                <% end %>
              </ul>
            </nav>
        </div>
    </header>
    </div>
    <div class="container-field" style="height: auto;">
    <%= yield %>
  </div>
  <footer class="container-field" style="background-color: black; height: 200px;">
    <h2 class="footer-text">ba-record</h2>
  </footer>

  </body>
</html>
