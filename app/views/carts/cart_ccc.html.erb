<h1>購入確定画面</h1>

<% if current_user.carts.nil? %>
	<p>中身が存在しません</p>
<% else %>
	<% current_user.carts.each do |cart| %>
	<%= cart.product.title %>
	<%= cart.sheet_number %>
	<%= cart.product.price %> 円

	合計<%= cart.product.price * cart.sheet_number %>円
	<% end %>

<%= form_for (@purchase), url:cart_last_path(user_id: current_user.id) do |f| %>
<%= f.select :destination_id, @destinations_array %>
<%= f.submit "購入する"  %>
<% end %>
<% end %>