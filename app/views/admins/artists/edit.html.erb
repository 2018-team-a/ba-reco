<h1>Admins::Artists#edit</h1>

<% if flash[:notice] %>
  <div class="flash" style="color: green;">
    <%= flash[:notice] %>
  </div>
<% end %>

<h3><%= form_for [:admins, @artist] do |f| %></h3>

<% if @artist.errors.any? %>
  <h2><%= @artist.errors.count %>件のエラーが発生しました</h2>
  <ul>
    <% @artist.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= f.text_field :name %>
<%= f.submit '保存' %>
<%end%>

<h3><%= link_to '戻る', admins_artist_path(@artist.id) %></h3>
