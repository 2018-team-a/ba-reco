<h1>ジャンル登録</h1>

<%= form_for [:admins, (@genre)] do |f| %>

<% if @genre.errors.any? %>
  <h2><%= @genre.errors.count %>件のエラーが発生しました</h2>
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= f.text_field :name %>
<%= f.submit "登録" %>
<% end %>

<h3><%= link_to "一覧", admins_genres_path %></h3>
