<h1>Labels#show</h1>

<% if flash[:notice] %>
  <div class="flash" style="color: green;">
    <%= flash[:notice] %>
  </div>
<% end %>


<h3><%= @label.name %></h3>

<h3><%= link_to "一覧", admins_labels_path %></h3>

<h3><%= link_to "編集", edit_admins_label_path(@label.id) %></h3>

<h3><%= link_to "削除", admins_label_path(@label.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></h3>
