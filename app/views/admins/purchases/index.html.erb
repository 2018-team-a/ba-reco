
<div class="container">
  <div class="table-responsive">
    <table class="table">
<%= form_tag admins_purchases_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "検索", :created_at => nil %>
    </p>
<% end %>
      <h1 class="h1">購入履歴</h1>
      <thead>
        <tr>
          <th>購入者id</th>
          <th>購入者　苗字</th>
          <th>購入者　名前</th>
          <th>苗字(カナ)</th>
          <th>名前(カナ)</th>
          <th>購入日</th>
          <th>合計金額</th>
          <th>ステータス編集</th>
        </tr>

<% @purchases_search.each do |purchase| %>
        <tr>
          <td><%= purchase.user.id %></td>
          <td><%= purchase.user.name_family_name %></td>
          <td><%= purchase.user.name_name %></td>
          <td><%= purchase.user.furigana_family_name %></td>
          <td><%= purchase.user.furigana_name %></td>
          <td><%= purchase.user.created_at %></td>
          <td><%= purchase.total_price %></td>
          <td><%= link_to "edit", edit_admins_purchase_path(purchase.id) %></td>
        </tr>
        <%end%>
      </thead>

    </table>
<%= paginate @purchases_search %>
  </div>
</div>



