<h1>Admins::Products#new</h1>

<h4>
	<table border="1">
		<%= form_for [:admins, @product] do |f| %>
		<tr>
			<th class="info">ジャケットイメージ</th>
			<th class="info">商品名</th>
			<th class="info">レーベル名</th>
			<th class="info">値段</th>
			<th class="info">在庫数</th>
			<th class="info">ディスク枚数</th>
			<th class="info"></th>
		</tr>


		<tr>
			<td><%= f.attachment_field :image %></td>
			<td><%= f.text_field :title %></td>
			<td><%= f.collection_select :label_id, Label.all, :id, :name, :prompt => "選択" %></td>
			<td><%= f.text_field :price %></td>
			<td><%= f.text_field :stock_count %></td>
			<td><%= f.text_field :disc_count %></td>
			<td><%= f.submit '登録' %></td>
		</tr>
		<%end%>
	</table>
</h4>




<div class="container">
	<div class="row">
		<div class="col">
			<%= form_for [:admins, @product] do |f| %>
			ジャケットイメージ<br>
