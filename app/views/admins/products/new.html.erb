			商品名<br>
			<%= f.text_field :title %><br>

			レーベル名<br>
			<%= f.collection_select :label_id, Label.all, :id, :name, :prompt => "選択" %><br>

			値段<br>
			<%= f.text_field :price %><br>

			在庫数<br>
			<%= f.text_field :stock_count %><br>

			ディスク枚数<br>
			<%= f.text_field :disc_count %><br>

			<%= f.submit '登録' %>
			<%end%>
		</div>
	</div>
</div>

