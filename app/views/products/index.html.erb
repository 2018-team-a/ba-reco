<div class="top-image-box">
<% r = 1 %>
<% @product.first(10).each do |product| %>
  <div class="image-box<%= r %>">
  <%= link_to product_path(product.id) do %>
    <%= attachment_image_tag product, :image, :fill, 50, 50, format:'jpeg' %>
  <% end %>
  </div>
<% r += 1 %>
<% end %>
</div>


<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">

<% @products.each do |product| %>
<div class="info-box" style="background-color: #ffffff;">
  <div class="info-image">
<!--   <%= link_to product_path(product.id) do %>
	  <%= attachment_image_tag product, :image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg" %>
  <% end %> -->
  </div>
  <div class="index-info-title">
	<%= link_to product.title, product_path(product.id) %>
  </div>
  <div class="index-info-price">
    <%= product.price %>円
  </div>
    <% a = [] %>
  <% product.discs.each do |disc| %>
    <% disc.tunes.each do |tune| %>
      <% a.push(tune.artist.name) %>
		<% end %>
	<% end %>
    <div class="index-info-artist">
    <%= a.max_by { |v| a.count(v)} %>
    </div>
  <% if user_signed_in? %>
    <%= form_for (@cart),url: sss_path(product_id: product) do |f| %>
      <div class="index-info-number-box">
        <%= f.label :枚数 %>
        <%= f.number_field :sheet_number, class:"number-field", :min => "1", :max => "99" %>
      </div>
      <div class="index-info-cart-button">
        <%= f.submit(["カート追加"]) %>
      </div>
    <% end %>
  <% end %>
</div>
  <% end %>
</div>
  <div class="col-lg-3"></div>
  </div>
 <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
  <%= paginate @products, class: "pagenate" %>
    </div>
    <div class="col-lg-3"></div>
  </div>