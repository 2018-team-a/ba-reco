<div class="top-image-box">
<% r = 0 %>
<% a = (1..10).to_a.sample(10) %>
<%= a %>
<% @product.last(10).each do |product| %>
  <div class="image-box<%= a[r] %>">
  	<div class= '<%= "image#{a[r]}" %>'></div>
  <%= link_to product_path(product.id) do %>
    <%= attachment_image_tag product, :image, :fill, 50, 50, format:'jpeg' %>
  <% end %>
  </div>
<% r += 1 %>
<% end %>
</div>
